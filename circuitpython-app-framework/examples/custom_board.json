{
  "name": "feather_rgb_matrix",
  "display_name": "Feather RGB Matrix Wing",
  "manufacturer": "Adafruit Industries",
  "version": "1.0",
  
  "capabilities": [
    "HAS_RGB_MATRIX",
    "HAS_WIFI",
    "HAS_BATTERY",
    "HAS_NEOPIXELS"
  ],
  
  "display": {
    "type": "rgb_matrix",
    "width": 16,
    "height": 32,
    "bit_depth": 4,
    "brightness": 0.4,
    "comment": "16x32 RGB Matrix FeatherWing"
  },
  
  "network": {
    "type": "wifi",
    "module": "native",
    "comment": "Using Feather ESP32-S2/S3 with native WiFi"
  },
  
  "power": {
    "default_brightness": 0.4,
    "low_power_brightness": 0.1,
    "battery_pin": "BATTERY",
    "battery_min_voltage": 3.0,
    "battery_max_voltage": 4.2,
    "charging_pin": "CHARGING"
  },
  
  "pins": {
    "neopixel": "NEOPIXEL",
    "button_a": "BUTTON_A",
    "button_b": "BUTTON_B",
    "button_c": "BUTTON_C",
    "i2c_scl": "SCL",
    "i2c_sda": "SDA"
  },
  
  "rtc": {
    "type": "internal",
    "comment": "Using internal RTC, external DS3231 optional via I2C"
  }
}