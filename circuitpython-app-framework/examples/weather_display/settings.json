                "lon": -81.4685
            }
        ],
        "custom": {
            "lat": null,
            "lon": null,
            "city": null
        }
    },
    "api": {
        "provider": "openweathermap",
        "cache_ttl": 600,
        "language": "en",
        "units": "imperial"
    },
    "features": {
        "show_temperature": true,
        "show_feels_like": true,
        "show_humidity": true,
        "show_wind": true,
        "show_pressure": true,
        "show_visibility": true,
        "show_uv_index": false,
        "show_air_quality": false
    },
    "alerts": {
        "enabled": true,
        "types": ["severe", "warning", "watch"],
        "flash_on_alert": true,
        "alert_color": "red"
    }
