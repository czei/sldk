{
    "weather_display": {
        "enabled": true,
        "location": "Orlando, FL",
        "units": "imperial",
        "update_interval": 600,
        "show_forecast": true,
        "show_alerts": true
    },
    "display": {
        "brightness": 0.5,
        "scroll_speed": 0.04,
        "font_size": "medium",
        "color_scheme": "weather"
    },
    "network": {
        "wifi_ssid": "YOUR_WIFI_SSID",
        "wifi_password": "YOUR_WIFI_PASSWORD",
        "retry_attempts": 3,
        "timeout": 30
    },
    "locations": {
        "presets": [
            {
                "name": "Disney World",
