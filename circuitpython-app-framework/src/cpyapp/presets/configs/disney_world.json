{
  "name": "disney_world",
  "category": "theme_parks",
  "description": "All Walt Disney World parks - Magic Kingdom, EPCOT, Hollywood Studios, Animal Kingdom",
  "version": "1.0.0",
  "author": "ThemeParkAPI Framework",
  "tags": ["disney", "theme_park", "orlando", "wait_times"],
  
  "data_source": {
    "type": "theme_park",
    "park_ids": [6, 5, 7, 8],
    "min_wait": 0,
    "show_closed": false,
    "cache_ttl": 300,
    "format": "{park}: {ride} - {wait} min"
  },
  
  "style": {
    "name": "disney",
    "theme": "magic",
    "scroll_speed": 0.04,
    "colors": {
      "primary": "Blue",
      "secondary": "Yellow", 
      "accent": "Red",
      "low_wait": "Green",
      "medium_wait": "Yellow",
      "high_wait": "Orange",
      "very_high_wait": "Red",
      "closed": "Gray",
      "background": "Black"
    },
    "thresholds": {
      "low": 15,
      "medium": 45,
      "high": 90
    },
    "animations": {
      "sparkle_on_low": true,
      "pulse_on_high": true
    }
  },
  
  "board": "auto",
  
  "parameters": {
    "min_wait": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "max": 120,
      "description": "Minimum wait time to display (minutes)"
    },
    "update_interval": {
      "type": "integer", 
      "default": 300,
      "min": 60,
      "max": 3600,
      "description": "How often to update data (seconds)"
    },
    "show_closed": {
      "type": "boolean",
      "default": false,
      "description": "Show closed attractions"
    },
    "parks": {
      "type": "array",
      "items": "string",
      "default": ["all"],
      "choices": ["all", "magic_kingdom", "epcot", "hollywood_studios", "animal_kingdom"],
      "description": "Which parks to include"
    }
  },
  
  "requirements": {
    "network": "Internet connection required",
    "api": "Uses queue-times.com API (no key required)"
  },
  
  "example_usage": "from cpyapp.apps import SimpleScrollApp\n\n# Basic usage\napp = SimpleScrollApp.from_preset('disney_world')\napp.run()\n\n# Show only high wait times\napp = SimpleScrollApp.from_preset('disney_world', min_wait=45)\napp.run()\n\n# Specific parks only\napp = SimpleScrollApp.from_preset('disney_world', parks=['magic_kingdom', 'epcot'])\napp.run()"
}